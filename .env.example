PORT=5000

# MongoDB Configuration
# Local MongoDB
MONGODB_URI=mongodb://localhost:27017/petticash_db

# MongoDB Atlas (Cloud - FREE)
# MONGODB_URI=mongodb+srv://username:password@cluster0.xxxxx.mongodb.net/petticash_db?retryWrites=true&w=majority

# JWT Configuration
JWT_SECRET=petty_cash_secret_key_2026_change_in_production
JWT_EXPIRE=7d

# Environment
NODE_ENV=development

# Email Configuration for OTP (Gmail Example)
# To get app password for Gmail:
# 1. Go to Google Account > Security
# 2. Enable 2-Step Verification
# 3. Generate App Password
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-16-digit-app-password
EMAIL_FROM="Pettica$h Management <noreply@company.com>"

# SMS Configuration (Optional - Twilio)
SMS_ENABLED=false
TWILIO_ACCOUNT_SID=your_account_sid
TWILIO_AUTH_TOKEN=your_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# File Upload Configuration
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=5242880

# CORS Configuration
CORS_ORIGIN=http://localhost:5173
