PORT=5000

# MongoDB Configuration
# MongoDB Atlas (Cloud - Recommended for Production)
MONGODB_URI=mongodb+srv://<username>:<password>@cluster0.xxxxx.mongodb.net/petty_cash_db?retryWrites=true&w=majority

# Local MongoDB (Development Only)
# MONGODB_URI=mongodb://localhost:27017/petticash_db

# JWT Configuration - CHANGE IN PRODUCTION!
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production_min_32_chars
JWT_EXPIRE=7d

# Environment
NODE_ENV=production

# Email Configuration (Gmail Example)
# To get app password for Gmail:
# 1. Go to Google Account > Security
# 2. Enable 2-Step Verification
# 3. Go to Security > App passwords
# 4. Generate password for "Mail" app
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-16-digit-app-password
EMAIL_FROM="Petty Cash <noreply@yourcompany.com>"

# CEO Email for Admin Reports
CEO_EMAIL=ceo@yourcompany.com

# Frontend URL (for email links and CORS)
FRONTEND_URL=https://your-frontend-url.com

# File Upload Configuration
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=5242880

# CORS Configuration
CORS_ORIGIN=https://your-frontend-url.com

